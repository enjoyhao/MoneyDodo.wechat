/* pages/designQuestionaire/designQuestionaire.wxss */
.body{
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  background: #E6E6FA;
  font-size: 13pt;
}

.type{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  padding-top: 30rpx;
}

.question-block{
  background: white;
  border-radius: 10px;
  padding-bottom: 50rpx;
  margin:10rpx;
}

.title {
  font-weight: bold;
  padding:40rpx;
}

.radio-group{
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.radio{
  border: 1px solid #DBDBDB;
  border-radius: 5px;
  margin: 10rpx;
  padding: 10rpx;
}

radio {
  transform:scale(0.7);
}

.textarea{
  border: 1px solid #DBDBDB;
  border-radius: 5px;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 300rpx;
}

.bottom_btn{
  margin: 30rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.addItem {
  color: blue;
  margin: 40rpx;
  font-size: 30rpx;
}